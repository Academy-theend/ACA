@import "variables"

@font-face
  font-family 'academy'
  src url(icomoon-font-path + '/academy.eot?8606ux')
  src url(icomoon-font-path + '/academy.eot?8606ux#iefix') format('embedded-opentype'), url(icomoon-font-path + '/academy.ttf?8606ux') format('truetype'), url(icomoon-font-path + '/academy.woff?8606ux') format('woff'), url(icomoon-font-path + '/academy.svg?8606ux#academy') format('svg')
  font-weight normal
  font-style normal

[class^="academy-"], [class*=" academy-"]
  font-family 'academy' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.academy-facebook
  &:before
    content academy-facebook
.academy-google-plus
  &:before
    content academy-google-plus
.academy-instagram
  &:before
    content academy-instagram
.academy-pinterest
  &:before
    content academy-pinterest
.academy-twitter
  &:before
    content academy-twitter
.academy-vimeo-social
  &:before
    content academy-vimeo-social
.academy-youtube
  &:before
    content academy-youtube

