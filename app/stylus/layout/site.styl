			font-size 2.3rem
			

.enterate
	background-color #EEEEEE
	padding-top $paddingSection
	padding-bottom $paddingSection
	
	.header
		margin-bottom 3rem
	.box
		box-interno()
		display flex
		flex-direction column
		+above($bp4)
			flex-direction row
	&__caja
		
		+above($bp4)
			flex 1 1 49%
			
		&--izquierdo
			background-color $white
			margin-bottom 1rem
			padding 2rem 1rem
			figure
				display flex
				flex-direction column
			+above($bp3)
				background-color #EEEEEE
				padding 0 2rem 0 0
				border-radius 10px
				overflow hidden
				figure
					position relative
					border-radius 10px
					overflow hidden
					figcaption
						absolute bottom 25px left 0
						width 70%
						padding 0.5rem
						background-color rgba(#EEEEEE, 0.8)
						color #3E3E3E
			
		&--derecho
			article
				background-color $white
				display flex
				margin 0.5rem 0
				flex-direction column
				padding 2rem 1rem
				&:first-child
					margin-top 0
				+above($bp4)
					flex-direction row-reverse
					padding 0
					figure
						width 74.5%
	&__informacion
		padding 1rem 1rem 0 1rem
		p
			color #8F8F8F
			font-size 1.2rem
			padding-right 0.5rem
			line-height: 1.1	
		h3
			line-height: 1.2
					

				
			

.estadisticas
	background-image url("../img/estadisticas.jpg")
	background-size cover
	background-position center center
	width 100%
	color $white
	.box
		box-interno()
		display flex
		padding 0
		flex-direction column
		+above($bp4)
			flex-direction row
	&__caja
		padding 2.5rem 0
		+above($bp4)
			flex 1 1 40%
			&:last-child
				flex-basis 60%
	&__opacidad
		background-color rgba($black, 0.6)
	&__informacion
		display flex
		justify-content center
		flex-direction column
		padding 3rem 1rem
		+above($bp4)
			padding 0 1rem
		span
		strong
			display block
			text-align left
			line-height 1
			text-align center
			+above($bp4)
				text-align left
		span
			font-size 1.7rem
			+above($bp3)
				font-size 2.5rem
			+above($bp4)
				font-size 2rem
			+above($bp5)
				font-size 2.5rem
		strong
			text-transform uppercase
			font-size 2rem
			+above($bp3)
				font-size 3.5rem
			+above($bp4)
				font-size 3.2rem
			+above($bp5)
				font-size 3.5rem
		
		
	&__numeros
		display flex
		justify-content center
		flex-wrap wrap
		div
			padding 2rem 0
			width 40%
			max-width 290px
			margin 1rem
			text-align center
			span
			strong
				display block
			span
				font-size 1.4rem
				text-transform uppercase
			strong
				font-size 4rem

.formulario
	wide-max(400px)
	margin-top 2rem
			
		 
		

.footer
	gradiente()
	color $white
	padding-top $paddingSection
	padding-bottom $paddingSection
	font-size 1.2rem
	text-align center
	+above($bp3)
		text-align left
	.box
		box-interno()
		display flex
		flex-wrap wrap
		
		align-items center
		flex-direction column
		+above($bp3)
			flex-direction row
			justify-content space-around
			align-items flex-start
		.information__item
			width 100%
			margin-top 1rem
			&:first-child
				margin-top 0
			+above($bp1)
				flex 1 1 33%	
				margin-top 0
			a
				color white	

	
		
	
	

.header
	overflow hidden
	position relative
	
	&__top
		align-items center
		gradiente()
		display flex
		flex-wrap wrap
		justify-content space-between
		padding 0.5rem 0 0 0
		width 100%
		+above($bp3)
			justify-content center
		+above($bp4)
			justify-content space-around
		h1
			margin-left $gutterwidth
		.icon-nav
			margin-right $gutterwidth
			span
				background-color $secondary
		&--internal
			background-color $lightergrey
			position relative !important
			.logo
				background-image url("../img/logo.png")
			.nav
				ul
					a
						border-bottom 1px dashed $basecolor
						color $black
						&:hover
							color $white
							border-bottom 3px solid $secondary
						+above($bp3)
							border-bottom 0
					a.active
						color $white
			.icon-nav
				span
					background-color $basecolor

