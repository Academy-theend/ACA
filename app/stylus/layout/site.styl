html
	-ms-text-size-adjust 100%
	-webkit-overflow-scrolling touch
	-webkit-tap-highlight-color lighten($basecolor, 75%)
	-webkit-text-size-adjust 100%
	background $background
	font-size 100%

body
	background-color transparent
	color $textcolor
	font-family $basefont
	line-height $baselineheight
	margin 0
	padding 0
	width 100%

/**
* From here it is where you must write the positioning styles
* and details that form your web. Enjoy!
*/
.coursesCountDown
	display none
	background-color #EBEBEB
	+above($bp3)
		display block
		.box
			display flex
			align-items center
			height 110px
			overflow hidden
			box-interno()
		&__item
			flex 1 1 33%
			span
				display block
				text-align center
		&__flex
			display flex
			align-items center
			
	.dia
		font-size 3rem
		border-bottom 2px solid $superdark
	.mes
		font-size 2rem
	&__informacion
		margin-left 2rem
		span
			font-size 1.4rem
			display block
			width 250px
			color #515151
			text-align left
			margin-top 0.5rem
			font-family $altfont
			font-weight 700
			

.footer
	&__map
		overflow hidden
	&__form
		background-color $basecolor-light
		flex 1
		font-size 1.2rem
		padding 5rem 3rem
		h6
			margin-bottom 1rem
	.information
		.box
			display flex
			flex-wrap wrap
			justify-content space-around
			padding 3rem 0
		&__item
			text-align center
			span
			strong
				display block
				font-size 1.2rem
				margin 1rem 0.5rem
			span
				font-size 2.5rem
	.isa
		background-color $basecolor
		color $white
		.box
			align-items center
			display flex
			flex-direction column
			justify-content space-between
			padding 1rem
			+above($bp3)
				flex-direction row
		a
			color $white
		&__left
			font-size 0.9rem
		&__right
			margin-top 1rem
			+above($bp3)
				margin-top 0
			ul
				display flex
				li
					margin 0 0.5rem
			a
				
				font-size 1.6rem
				&:hover
					color $secondary
					text-decoration none

.header
	overflow hidden
	position relative
	
	&__top
		align-items center
		background linear-gradient(left, $basecolor 0%, $basecolor-light 50%,  $basecolor 100%)
		display flex
		flex-wrap wrap
		justify-content space-between
		padding 0.5rem 0
		width 100%
		+above($bp3)
			justify-content center
		+above($bp4)
			justify-content space-around
		h1
			margin-left $gutterwidth
		.icon-nav
			margin-right $gutterwidth
			span
				background-color $secondary
		&--internal
			background-color $lightergrey
			position relative !important
			.logo
				background-image url("../img/logo.png")
			.nav
				ul
					a
						border-bottom 1px dashed $basecolor
						color $black
						&:hover
							color $white
							border-bottom 2px solid $secondary
						+above($bp3)
							border-bottom 0
					a.active
						color $white
			.icon-nav
				span
					background-color $basecolor

.proximoCurso
	text-transform uppercase
	padding 0.5rem 1rem

.iniciaClases
	background-color $secondary
	color $white
	text-align center
	height inherit
	display flex
	flex-direction column
	justify-content center


.logo
	background-image url("../img/logo.png")
	background-repeat no-repeat
	background-size 170px 58px
	display block
	height 53px
	text-indent -99999px
	width 170px

.ultimosCursos
	box-shadow 0px 10px 15px $darkgrey
	relative top left
	z-index 2
	&__imagen
		position relative
		figcaption
			text-align center
			display flex
			justify-content center
			align-items center
			flex-direction column
			absolute bottom left right
			background-color rgba(0,0,0,0.7)
			height 100px
			color $white
	.banderaCategoria
		display none
	+above($bp3)
		.box
			display flex
			justify-content space-between
			box-interno()
		&__destacado
		&__items
			width 50%
			margin 5px
		&__items
			display flex
			flex-wrap wrap
			article
				width 46.7%
				margin 9px 7px


	

.slider
	display none
	&:before
		absolute right 0 left 0 bottom 0 top 0
		background $basecolor 
		background linear-gradient(to right, $basecolor, $basecolor-light - 90%) 
		content " "
		display block
		opacity 0.7
	+above($bp3)
		display block
		position relative
		img
			background-size cover
			height auto
			min-height 100%
			min-width 100%
			position relative
			transition 1s opacity
			width auto
			z-index -100
		.slider--message
			absolute left 5% top 30%
			color $white
			font-size 2.1rem
			font-weight bold
			text-transform capitalize
			z-index 5
			.title
				font-size 3.5rem
				text-shadow 3px 4px 5px $black
				&--secundary
					font-size 1.5rem
					max-width 800px
					width 100%
					text-shadow none
					margin-top 1rem
			+above($bp4)
				font-size 1.5rem










