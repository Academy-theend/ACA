			background-color rgba(0,0,0,0.7)
			height 100px
			color $white
			font-style normal
			h3
				margin-bottom 0.5rem
				font-size 1.3rem
				font-weight: 300
			
	.banderaCategoria
		display none
		+above($bp3)
			display block
			absolute top 10px left
			background-color $white
			font-family $basefont
			font-weight bold
			color $darkergrey
