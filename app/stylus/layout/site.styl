			display flex
			flex-wrap wrap
			flex 1 1 50%
		
		
			
				
			


	

.slider
	display none
	&:before
		absolute right 0 left 0 bottom 0 top 0
		background $basecolor 
		background linear-gradient(to right, $basecolor, $basecolor-light - 90%) 
		content " "
		display block
		opacity 0.7
	+above($bp3)
		display block
		position relative
		img
			background-size cover
			height auto
			min-height 100%
			min-width 100%
			position relative
			transition 1s opacity
			width auto
			z-index -100
		.slider--message
			absolute left 5% top 30%
			color $white
			font-size 2.1rem
			font-weight bold
			text-transform capitalize
			z-index 5
			.title
				font-size 3.5rem
				text-shadow 3px 4px 5px $black
				color $white
				text-align left
				&--secundary
					font-size 1.5rem
					max-width 800px
					width 100%
					text-shadow none
					margin-top 1rem
			+above($bp4)
				font-size 1.5rem

