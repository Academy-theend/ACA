html
	-ms-text-size-adjust 100%
	-webkit-overflow-scrolling touch
	-webkit-tap-highlight-color lighten($basecolor, 75%)
	-webkit-text-size-adjust 100%
	background $background
	font-size 100%

body
	background-color transparent
	color $textcolor
	font-family $basefont
	line-height $baselineheight
	margin 0
	padding 0
	width 100%

/**
* From here it is where you must write the positioning styles
* and details that form your web. Enjoy!
*/

.bg
	&__mapa
		background-image url("../img/mapa-fondo.png")
		background-size cover
		background-position center
.blog
	background-color #eeeeee
	padding-bottom 3rem
	.box
		display flex
	&__container
		background-color white
		padding-top 3rem
	.blogArticles
	.asideArticles
		+above($bp3)
			flex 1 1 70%
	
	.blogArticles
		padding 0 1rem
		+above($bp3)
			flex-basis 62%
			margin-right 2%
				
	.asideRight
		display none
		+above($bp3)
			display block
			flex-basis 28%
	
	&__information
		h4
			font-size: 1.5rem
			margin-top 1rem
			+above($bp4)
				margin-top 0
		h2
			
			font-size 1.8rem
			text-transform: uppercase
			margin 2rem 0
			+above($bp3)
				font-size 2rem
				margin 0
			+above($bp4)
				font-size 2.5rem
				margin 2rem 0
			a
				color #666666
				&:hover
					text-decoration none
		p
			font-weight: 300
			font-size: 1rem
			+above($bp3)
				font-size 0.9rem
		
	&__item
		margin 2rem 0
		border-bottom 1px solid #CDCDCD
		padding-bottom 1rem
		+above($bp4)
			display flex
		&--sidebar
			padding 0.5rem
			border-bottom 0
			margin 1rem 0
			+above($bp4)
				padding 1rem	
			.blog__information
				margin-left 0.5rem
				h6
					color #BBBBBB
					font-size 0.8rem
					margin 0.5rem 0
					+above($bp4)
						margin-bottom 1.3rem
					
						
				h1
					
					text-transform uppercase
					color #666666
					font-size: 1rem
					margin-bottom 0
					+above($bp4)
						font-size 1.3rem
						margin-bottom 1rem
				h4
					font-size 1.1rem
					margin-top 0
	&__imagen
	&__information
		+above($bp3)
			flex 1 1 57%
	&__imagen
		+above($bp3)
			flex-basis 37.5%
			margin-right 2%
	
	
.contactanos
	
	&__form
		background-color rgba(2,20,39,0.8)
		text-align: center
		padding 2rem 0
		h2
			color white
			font-size 2rem
	&__mapa
		height 300px
	
	+above($bp4)
		display flex	
		&__form
		&__mapa
			flex 1 1 50%
		&__mapa
			height: auto
		
.coursesCountDown
	display none
	background-color #EBEBEB

	+above($bp3)
		display block
		.box
			display flex
			align-items center
			height 110px
			overflow hidden
			box-interno()
			padding-top 0
			padding-bottom 0
		&__item
			flex 1 1 33%
			span
				display block
				text-align center
		&__flex
			display flex
			align-items center
			
	
	
	
	
	.dia
		font-size 3rem
		border-bottom 2px solid $superdark
	.mes
		font-size 2rem
	&__fecha
		color #001326
		line-height 1
		
	&__informacion
		margin-left 2rem
		line-height 1
		
		span
			font-size 1.4rem
			display block
			width 250px
			color #515151
			text-align left
			margin-top 1.2rem
			font-family $altfont
			font-weight 700
	&__avaliables
		color: #333333
		font-size 1.4rem
		font-weight bold
		position relative
		&:before
			content ""
			display block
			width 2px
			height: 45px
			background-color #CACACA
			absolute top 15px left 0
