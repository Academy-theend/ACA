/*------------------------------------*\
    $BUTTONS
\*------------------------------------*/
/*
 * We define the buttons and their variants
 */


 /**
 * .Btn is the main class for defining a button
 */
.btn
	background-color transparent
	border 2px solid $basecolor
	border-radius $radius
	color $basecolor
	cursor pointer
	display inline-block
	font-size 100%
	font-weight bold
	line-height $baselineheight * 1.5
	margin 0
	position relative
	text-align center
	transition: all 0.3s
	vertical-align middle
	white-space nowrap
   	letter-spacing 1px
   	padding-bottom 0
   	padding-left 1.5rem
   	padding-right 1.5rem
	text-transform uppercase
	min-width 150px
	
		


	/**
 	* No one wants a button with underlined text when
 	* We hover.
 	*/

	&:hover
		text-decoration none
		&:after
			right 0


	&:active,
    &:focus
        outline none

    &:visited
    	color $basecolor
    &:after
		content ""
		absolute left 0 bottom 0
		height 0
		width 100%
		border-radius inherit
		background-color rgba($secondary , 0.15)
		transition all 0.3s
	&:before
		content ""
		absolute left 0 top 0
		height 100%
		width 100%
		transform translateY(5px)
		background-color inherit
		border-radius 10px
		z-index -1
		box-shadow inset 0 -6px 10px rgba($secondary , 0.25)
	&:hover:after
	&.hover:after
		height 100%
	




/*------------------------------------*\
    $VARIANT-BUTTONS
\*------------------------------------*/
/**
 * Variants of the buttons: color to give feelings.
 */





/**
* Button style inputs
*/
input[type="submit"].btn:hover
	border-color $buttonbordercolor



	

/**
* Button not available
*/
.btn--disabled
	cursor default
    opacity 0.5


/**
* Error Button
*/
.btn--error
	background-color $color-error
	color darken($color-error, 40%)
	&:hover
		color lighten($color-error, 40%)

	&:visited
		color darken($color-error, 40%)



/**
* Info button
*/
.btn--info
	background-color $color-info
	color darken($color-info, 40%)
	&:hover
		color lighten($color-info, 40%)

	&:visited
		color darken($color-info, 40%)


/**
* Main Button
*/

.btn--primary
	background-color transparent
	border 2px solid $basecolor
	font-size 1.2rem
	padding 0.2rem 1rem
	color $basecolor-light
	border-radius 0
	wide-max(200px)
	+above($bp1)
		wide-max(250px)
		padding 0.2rem 3rem
	


	&:hover,
	&:visited
		color $white

/**
* OK button
*/

.btn--white
	border 1px solid white
	color white
	text-transform lowercase
	&:hover
		color white

	&:visited
		color white
	

.btn--success
	border 3px solid $color-success
	color $color-success
	font-size 1.2rem
	line-height 1.5 !important
	text-transform lowercase
	&:hover
		color lighten($color-success, 40%)

	&:visited
		color darken($color-success, 40%)


/**
* Warning button
*/
.btn--warning
	background-color $color-warning
	color darken($color-warning, 40%)
	&:hover
		color lighten($color-warning, 40%)
	&:visited
		color darken($color-warning, 40%)



.btn--inactive,
.btn--inactive:hover,
.btn--inactive:active,
.btn--inactive:focus
	cursor default
	opacity 0.5




/*------------------------------------*\
    $BUTTONS-SIZES
\*------------------------------------*/
/**
 * Variants of the buttons by size.
 *
 */

.btn
	&--form
		text-transform uppercase
		color white
		background-color #4BC700
		display block
		margin-top -15px
		border 0
		font-size 1.5rem
		padding 0.2rem
		width 100% !important
		margin-bottom 15px
		&--inline
			width 90% !important
			display inline-block
			margin-top 0.5rem
			margin-bottom 0
			font-size 0.8rem
			+above($bp3)
				margin-top 0
				width auto !important
				padding 0.43rem 0.2rem !important
			+above($bp4)
				font-size 1rem
				padding 0.67rem 2rem !important


	&--mini
		line-height 1.5
		padding-left 0.5em
		padding-right 0.5em
	&--small
		line-height 2
		padding-left 1.5em
		padding-right 1.5em
	&--large
		line-height 3
		padding-left 2em
		padding-right 2em
		font-size 2rem
		text-transform uppercase
		padding-top 0.5rem
		padding-bottom 0.5rem


/*------------------------------------*\
    $GROUP BUTTONS
\*------------------------------------*/
/**
 * With this class we can group the buttons
 * In horizontal groups.
 *
 */
	&--group
		margin-left .3em
		position relative
		.btn
			border-radius 0
			float left
			margin-left -1px
			position relative
			&:first-child
				border-radius 0 0 $radius $radius
				margin-left 0
			&:last-child
				border-radius $radius $radius 0 0


.btn--group .btn.large
	&:first-child
		border-radius $radius 0 $radius 0
		margin-left 0
	&:last-child
		border-radius 0 $radius 0 $radius


/*------------------------------------*\
    $BLOCK-BUTTONS
\*------------------------------------*/

	&--block
		display block
		margin 1rem 0
		&:hover,
		&:focus,
		&:visited
			color $white
	
	
