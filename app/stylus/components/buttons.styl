/*------------------------------------*\
    $BUTTONS
\*------------------------------------*/
/*
 * We define the buttons and their variants
 */


 /**
 * .Btn is the main class for defining a button
 */
.btn
	background-color $buttonbackground
	border none
	border-radius $radius
	color $textcolor
	color $white
	cursor pointer
	display inline-block
	font-size 100%
	font-weight normal
	line-height $baselineheight * 1.5
	margin 0
	padding-top 0
	position relative
	text-align center
	transition: all 0.3s
	vertical-align middle
	white-space nowrap
   	letter-spacing 1px
   	padding-bottom 0
   	padding-left 1em
   	padding-right 1em

	&--center
		margin 0 auto
		width 160px
		display block
		color $white
		&--big
			width 100%
			max-width 245px
			margin-top 20px
			margin-bottom 5px
			font-size 1.3rem
		


	/**
 	* No one wants a button with underlined text when
 	* We hover.
 	*/

	&:hover
		text-decoration none
		&:after
			right 0


	&:active,
    &:focus
        outline none

    &:visited
    	color $white
    &:after
		content ""
		absolute left 0 bottom 0
		height 0
		width 100%
		border-radius inherit
		background-color rgba($secondary , 0.15)
		transition all 0.3s
	&:before
		content ""
		absolute left 0 top 0
		height 100%
		width 100%
		transform translateY(5px)
		background-color inherit
		border-radius 10px
		z-index -1
		box-shadow inset 0 -6px 10px rgba($secondary , 0.25)
	&:hover:after
	&.hover:after
		height 100%
	




/*------------------------------------*\
    $VARIANT-BUTTONS
\*------------------------------------*/
/**
 * Variants of the buttons: color to give feelings.
 */

.closebt
	cursor pointer
	transition all 0.2s

	&:hover
		transform rotate(90deg)

.close-animatedModal
	padding-top 200px



/**
* Button style inputs
*/
input[type="submit"].btn:hover
	border-color $buttonbordercolor


/**
* Button Slider
*/
.btn--slider
	background-color transparent
	border 2px solid $basecolor
	font-size 1.2rem
	padding-left 1rem
	padding-right 1rem
	&:hover
		background-color transparent
	&--white
		border 2px solid $white
		max-width 150px
		color $white
		&:visited
			color $white
			border 2px solid $white

/**
* Button not available
*/
.btn--disabled
	cursor default
    opacity 0.5


/**
* Error Button
*/
.btn--error
	background-color $color-error
	color darken($color-error, 40%)
	&:hover
		color lighten($color-error, 40%)

	&:visited
		color darken($color-error, 40%)



/**
* Info button
*/
.btn--info
	background-color $color-info
	color darken($color-info, 40%)
	&:hover
		color lighten($color-info, 40%)

	&:visited
		color darken($color-info, 40%)


/**
* Main Button
*/

.btn--primary
	background-color $basecolor
	color $white
	font-size 1.15rem
	padding 0 1rem


	&:hover,
	&:visited
		color $white

/**
* OK button
*/

.btn--success
	background-color $color-success
	color darken($color-success, 40%)
	&:hover
		color lighten($color-success, 40%)

	&:visited
		color darken($color-success, 40%)


/**
* Warning button
*/
.btn--warning
	background-color $color-warning
	color darken($color-warning, 40%)
	&:hover
		color lighten($color-warning, 40%)
	&:visited
		color darken($color-warning, 40%)



.btn--inactive,
.btn--inactive:hover,
.btn--inactive:active,
.btn--inactive:focus
	cursor default
	opacity 0.5




/*------------------------------------*\
    $BUTTONS-SIZES
\*------------------------------------*/
/**
 * Variants of the buttons by size.
 *
 */

.btn
	&--mini
		line-height 1.5
		padding-left 0.5em
		padding-right 0.5em
	&--small
		line-height 2
		padding-left 1.5em
		padding-right 1.5em
	&--large
		line-height 3
		padding-left 3em
		padding-right 3em


/*------------------------------------*\
    $GROUP BUTTONS
\*------------------------------------*/
/**
 * With this class we can group the buttons
 * In horizontal groups.
 *
 */
	&--group
		margin-left .3em
		position relative
		.btn
			border-radius 0
			float left
			margin-left -1px
			position relative
			&:first-child
				border-radius 0 0 $radius $radius
				margin-left 0
			&:last-child
				border-radius $radius $radius 0 0


.btn--group .btn.large
	&:first-child
		border-radius $radius 0 $radius 0
		margin-left 0
	&:last-child
		border-radius 0 $radius 0 $radius


/*------------------------------------*\
    $BLOCK-BUTTONS
\*------------------------------------*/

	&--block
		display block
		margin 1rem 0
		&:hover,
		&:focus,
		&:visited
			color $white