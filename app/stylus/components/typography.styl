/*------------------------------------*\
    $TYPOGRAPHY
\*------------------------------------*/


// HEADINGS ====================================================

h1,
h2,
h3,
h4,
h5,
h6
	margin  0
	font-family $baseheadingfont
	font-weight $baseheadingfontweight
	color $baseheadingfontcolor
	text-rendering  optimizelegibility
		&.altheader
			color $grey
			text-transform uppercase



h1 small,
h2 small,
h3 small
	font-weight  normal
	display block
	color $grey


// TYPOGRAPHY ====================================================

p,
ol,
ul,
dl,
address
	margin 0
	line-height $baselineheight

p
	margin 0.5rem 0


.intro
 	font-weight bold


small
	font-size 12px
	color $grey


ul,
ol
	margin  0 0 $baselineheight 0
	padding  0 0 0 $gutterwidth


li ul,
li ol
	margin  0


// blockquote

blockquote
	margin  0 0 0 0
	padding  $gutterwidth
	border-left  2px solid $basecolor 
	font-family  $altfont
	font-style  normal
	background-color $lightergrey
	p
		font-size: 18px
		color $grey
		font-style italic
	+above($bp3)
		margin 1rem 3rem
	



q
	quotes  none
	font-style italic


blockquote p::before,
blockquote p::after,
q:before,
q:after
	content ""


cite
	font-style normal


// definition lists

dl,
dd
	margin-bottom $baselineheight


dt
	font-weight bold


.dl-horizontal

	dt
		float  left
		clear  left
		width  20.25%
		text-align  right


	dd
		margin-left  22.78%



// text-level

abbr[title]
	border-bottom  1px dotted $bordercolor
	cursor  help


b, strong
	font-weight  bold


dfn
	font-style  italic


ins
	background-color lighten($basecolor, 75%)
	color $textcolor
	text-decoration  none


mark
	background-color  yellow
	color $textcolor


pre,
code,
kbd,
samp
	font-family $codefont
	font-size 14px
	line-height  $baselineheight


pre
	white-space  pre
	white-space  pre-wrap
	word-wrap  break-word


sub,
sup
	position  relative
	font-size: 12px
	line-height  0
	vertical-align  $baselineheight


sup
	top -.5em


sub
	bottom -.25em
