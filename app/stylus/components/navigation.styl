/*------------------------------------*\
    $NAVIGATION
\*------------------------------------*/

.icon-nav
	width 30px
	height 33px
	position relative
	transform rotate(0deg)
	transition .5s ease-in-out
	cursor pointer
	span
		display block
		position absolute
		height 5px
		width 100%
		background $secondary
		border-radius 9px
		opacity 1
		left 0
		transform rotate(0deg)
		transition .25s ease-in-out
		&:nth-child(1)
			top 0
		&:nth-child(2)
			top 10px
		&:nth-child(3)
			top 20px

.icon-nav.open
	span
		&:nth-child(1)
			top 18px
			transform rotate(135deg)
		&:nth-child(2)
			opacity 0
			left -60px
		&:nth-child(3)
			top 18px
			transform rotate(-135deg)

.nav
	ul
		display block
		padding 0
		a
			display block
			padding 0.5rem 1rem
			color $white
			font-size 1.2rem
			text-align center
			transition background-color .3s ease-in
			border-bottom 1px dashed $secondary
			&:hover
				text-decoration none
			
		+above($bp3)
			display flex
			a
				border-bottom 0
				color $white
				&:hover,
				&:focus,
				&:active
					
					
					outline none
					border-bottom 2px solid $secondary
				
	&--main
		display none
		width 100%
		+above($bp3)
			display block !important
			width auto
			margin-top 1rem



+above($bp3)
	#togle-nav
		display none




